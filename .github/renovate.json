{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:best-practices"
    ],
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
            "groupName": "{{manager}} patch dependencies",
            "groupSlug": "{{manager}}-patch",
            "matchPackagePatterns": [
                "*"
            ],
            "matchUpdateTypes": [
                "patch"
            ]
        }
    ],
    "rangeStrategy": "bump"
}
